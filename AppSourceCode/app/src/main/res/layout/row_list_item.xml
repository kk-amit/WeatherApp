<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRowParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dim_5"
        android:elevation="@dimen/dim_3"
        card_view:cardCornerRadius="@dimen/dim_1"
        card_view:ignore="UnusedAttribute">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="@dimen/dim_80"
                android:layout_height="@dimen/dim_80"
                android:layout_marginStart="@dimen/dim_8"
                android:layout_marginLeft="@dimen/dim_8"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginBottom="@dimen/dim_8"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/str_app_name"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="@dimen/dim_0"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivIcon"
                android:layout_marginStart="@dimen/dim_8"
                android:layout_marginLeft="@dimen/dim_8"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginEnd="@dimen/dim_8"
                android:padding="@dimen/dim_4"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_tx_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="@dimen/dim_0"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginStart="@dimen/dim_8"
                android:layout_marginTop="@dimen/dim_4"
                android:layout_marginEnd="@dimen/dim_8"
                android:padding="@dimen/dim_4"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dim_tx_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivIcon"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</merge>